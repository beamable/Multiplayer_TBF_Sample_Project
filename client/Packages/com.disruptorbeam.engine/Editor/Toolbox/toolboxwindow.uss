/* SCROLL AREA */
#category-listings {
    flex-grow: 1;
    margin-left: 12px;
    margin-right: 12px;
    color: #ffffff;
}

#category-listings TemplateContainer {
    flex-grow: 1;
}

Image.drop-down {
	height: 45px;
	width: 45px;
	position:absolute;
	top: 20px;
	right: 30px;
	background-image: resource("Packages/com.disruptorbeam.engine/Editor/Toolbox/Icons/panelclose.png");
}

Image.drop-down:hover {
    background-image: resource("Packages/com.disruptorbeam.engine/Editor/Toolbox/Icons/panelclose_hover.png");
}

Image.drop-down.open {
	height: 45px;
	width: 45px;
	position:absolute;
	top: 20px;
	right: 30px;
	background-image: resource("Packages/com.disruptorbeam.engine/Editor/Toolbox/Icons/panelopen.png");
}

Image.drop-down.open:hover {
    background-image: resource("Packages/com.disruptorbeam.engine/Editor/Toolbox/Icons/panelopen_hover.png");
}

#main {
    flex-grow: 1;
}

/* WIDGET */

.widget-detail {
    flex-shrink: 1;
    cursor: pan;
}

.widget-content {
    flex-direction: row;
    cursor: pan;
    border-width: 2px;
}

.widget-content.dark {
    background-color: #282828;
}

.widget-content.light {
    background-color: rgba(0,0,0,.2)
}

.widget-content.dark.highlight {
    background-color: rgba(0,0,0,.4)
}
.widget-content.light.highlight {
    background-color: rgba(0,0,0,.4)
}


.widget-content:hover {
    border-color: #ffffff;
    border-width: 2px;
    cursor: pan;
}

.widget-icon {
    min-width: 100px;
    max-width: 100px;
    width: 64px;
    height: 64px;
    cursor: pan;
}


.widget-name {
    white-space: normal;
    font-size: 24px;
    -unity-font: url("project:///Packages/com.disruptorbeam.engine/Runtime/DisruptorEngine/UI/Fonts/Ubuntu-Regular.ttf");
    color: #FFFFFF;
    cursor: pan;
}

.widget-desc {
    font-size: 14px;
    white-space: normal;
    cursor: pan;
    -unity-font: url("project:///Packages/com.disruptorbeam.engine/Runtime/DisruptorEngine/UI/Fonts/Ubuntu-Regular.ttf");
    color: #FFFFFF;
}

/* /WIDGET */

/* CATEGORY */

.category-detail
{
    flex-grow: 1;
}
.category-header {
    flex-direction: row;
    background-color: rgba(0,0,0,.5);
    margin-top: 4px;
