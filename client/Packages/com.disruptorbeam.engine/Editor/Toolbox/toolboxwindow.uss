/*
    NOTE: word-wrap is honored in 2018 but not white-space
          white-space is honored in 2019 but not word-wrap
*/


#style {
    /* Needs to flex and have strict height bounds to render correctly in both 2018 and 2019 */
    flex-grow: 1;
    height: 25px;
    min-height: 25px;
    max-height: 25px;
}

#unity-imgui-container {
    -unity-font: url("project:///Packages/com.disruptorbeam.engine/Runtime/DisruptorEngine/UI/Fonts/Ubuntu-Regular.ttf");
    color: #FFFFFF;
}

#open-portal {
    color: #ffffff;
    height: 23px;
    -unity-font: url("project:///Packages/com.disruptorbeam.engine/Runtime/DisruptorEngine/UI/Fonts/Ubuntu-Regular.ttf");
}
